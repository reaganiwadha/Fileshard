<Window x:Class="Fileshard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        mc:Ignorable="d"
        Title="I can't believe it's not WinUI" Height="450" Width="800">
    <Grid Name="DropGrid" AllowDrop="True" Drop="DropGrid_Drop">
        <TextBlock Text="Drag files here" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
        <skia:SKElement x:Name="skElement" PaintSurface="OnPaintSurface" IgnorePixelScaling="True" />
    </Grid>
</Window>
