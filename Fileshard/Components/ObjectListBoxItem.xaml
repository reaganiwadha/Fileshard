<UserControl x:Class="Fileshard.Frontend.Components.ObjectListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF" xmlns:components="clr-namespace:Fileshard.Frontend.Components"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100">

    <Grid>
        <skia:SKElement x:Name="skElement" PaintSurface="OnPaintSurface" IgnorePixelScaling="True" />

        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
